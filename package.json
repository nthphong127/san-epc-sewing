{
  "name": "scan-epc",
  "version": "1.0.0",
  "main": "main.js",
  "description": "Ứng dụng quét EPC",
  "author": "Phong",
  "license": "ISC",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "devDependencies": {
    "electron": "^22.3.26",
    "electron-builder": "^23.6.0"
  },
  "dependencies": {
    "classic": "^0.0.2",
    "dotenv": "^16.4.7",
    "electron-log": "^5.4.1",
    "mssql": "^11.0.1",
    "nedb": "^1.8.0",
    "nodb": "^0.0.1"
  },
  "build": {
    "appId": "com.my-electron-app",
    "productName": "Scan EPC",
    "asar": false,
    "directories": {
      "output": "dist"
    },
    "files": [
      ".env",
      "main.js",
      "index.html",
      "renderer.js",
      "offline.js",
      "errors.db",
      "last.db",
      "list-scan.db",
      "offline.db",
      "node_modules/**/*",
      "assets/**/*",
      "lang/**/*"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "nthphong127",
        "repo": "san-epc-sewing"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}-setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
